<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEqSegundoGrau.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label Text="Insira o A" />
            <Entry x:Name="txt_a" />
            
            <Label Text="Insira o B" />
            <Entry x:Name="txt_b" />
            
            <Label Text="Insira o C" />
            <Entry x:Name="txt_c" />
            
            <Button Text="Calcular" Clicked="Button_Clicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
